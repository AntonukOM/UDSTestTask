@using Test.WebUI.Models
@model LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sing In";
    LoginModel login = Model;
}

    <form class="form-horizontal" method="post" action="/Login/SingIn">
        <div class="form-group">
            @Html.LabelFor(n => n.Name, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(n => n.Name, new { @class = "form-control", placeholder = "Enter name" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(l => l.Login, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(l => l.Login, new { @class = "form-control", placeholder = "Enter login" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Password, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(p => p.Password, new { @class = "form-control", placeholder = "Enter password" })
            </div>
        </div>        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Go</button>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="text-danger lead">@Html.ValidationSummary()</div>
            </div>
        </div>
    </form>